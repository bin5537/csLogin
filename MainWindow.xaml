<Window x:Class="csLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csLogin"
        mc:Ignorable="d"
        Title="C# Wpf Login" Width="400" Height="600">

    <Window.Background >
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2e0022" Offset="0.0"/>
            <GradientStop Color="#0d0d0d" Offset="0.3"/>
            <GradientStop Color="#1a1a1a" Offset="0.7"/>
            <GradientStop Color="#2e0022" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Border Width="360" Height="350" Margin="0,0,0,-16" Grid.RowSpan="2" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto">
                <TextBlock Text="C# WPF LOGIN" FontFamily="Spoqa Han Sans Neo" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0, 0, 0, 5"/>
                <TextBlock Text="Created by Subin" FontFamily="Spoqa Han Sans Neo" FontSize="14" FontWeight="Normal" Foreground="White" HorizontalAlignment="Center" Margin="0, 0, 0, 40" Opacity="0.6"/>


                <TextBlock Text="ID" Width="260"  FontFamily="Spoqa Han Sans Neo" FontSize="14" Foreground="White" Margin="0, 0, 0, 10" />
                <TextBox x:Name="UserIdBox" Width="260" Padding="15" FontFamily="Spoqa Han Sans Neo" FontSize="12" Background="Transparent" Foreground="White" BorderThickness="1" Text="" TextChanged="UserIdBox_TextChanged" Margin="0, 0, 0, 20">
                    <TextBox.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.1"/>
                    </TextBox.BorderBrush>
                </TextBox>

                <TextBlock Text="PASSWORD" Width="260" FontFamily="Spoqa Han Sans Neo" FontSize="14" Foreground="White" Margin="0, 0, 0, 10"/>
                <TextBox x:Name="UserPasswordBox" Width="260" Padding="15" FontFamily="Spoqa Han Sans Neo" FontSize="12" Background="Transparent" Foreground="White" BorderThickness="1" Margin="0, 0, 0, 20" TextChanged="UserPasswordBox_TextChanged">
                    <TextBox.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.1"/>
                    </TextBox.BorderBrush>
                </TextBox>

                <Button Content="LOGIN" FontFamily="Spoqa Han Sans Neo" FontSize="14" FontWeight="Bold" Width="260" Height="45" Click="Button_Click" Foreground="White" BorderThickness="1">
                    <Button.Background>
                        <SolidColorBrush Color="Black" Opacity="0.3"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.1"/>
                    </Button.BorderBrush>
                </Button>


            </StackPanel>
        </Border>
    </Grid>
</Window>
